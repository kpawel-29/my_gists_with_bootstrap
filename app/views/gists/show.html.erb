<%- model_class = Gist -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              gists_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_gist_path(@gist), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              gist_path(@gist),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:lang) %>:</strong></dt>
  <dd><%= @gist.lang %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @gist.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:snippet) %>:</strong></dt>
  

  <dd><%= raw Pygments.highlight(@gist.snippet, lexer: @gist.lang.downcase) %></dd>
  

</dl>


